<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TutorSystem.QuestionPage">
   <children>
      <BorderPane fx:id="borderPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="768.0" prefWidth="1024.0">
         <top>
            <HBox alignment="CENTER" prefHeight="69.0" prefWidth="1024.0" style="-fx-background-color: #2ad14b;" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="header" text="Question page">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </top>
         <right>
            <VBox fx:id="agentRegion" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #97D992;" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="agentImg" fitHeight="216.0" fitWidth="218.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/EZ%20agent.png" />
                     </image>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </ImageView>
                  <TextArea fx:id="agentTextArea" editable="false" prefHeight="298.0" prefWidth="249.0" text="This is where the agent's messages go" wrapText="true" />
               </children>
            </VBox>
         </right>
         <bottom>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #97D992;" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="returnHomeBtn" mnemonicParsing="false" onAction="#openHomePage" prefHeight="44.0" prefWidth="170.0" text="Return Home">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <HBox prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="syntaxBtn" mnemonicParsing="false" onAction="#loadQuestion" prefHeight="44.0" prefWidth="125.0" text="Syntax">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="hintBtn" mnemonicParsing="false" prefHeight="44.0" prefWidth="125.0" text="HINT">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="skipBtn" mnemonicParsing="false" onAction="#getRandomQuestion" prefHeight="44.0" prefWidth="125.0" text="Skip">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="hideAgentBtn" mnemonicParsing="false" onAction="#toggleAgentSidebar" prefHeight="44.0" prefWidth="140.0" text="Hide Agent">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </bottom>
         <center>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="QUESTION Title">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
                  <Label text="question">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </center>
         <left>
            <VBox fx:id="agentInterface1" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" style="-fx-background-color: #97D992;" BorderPane.alignment="CENTER">
               <children>
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="EASY" />
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="MEDIUM" />
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="HARD" />
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="RETRY" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </left>
      </BorderPane>
      <BorderPane maxHeight="400.0" maxWidth="600.0" style="-fx-background-color: #FFFFFF;" visible="false">
         <center>
            <Button mnemonicParsing="false" text="Button" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</StackPane>
